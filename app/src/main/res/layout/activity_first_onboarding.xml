<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/first_onboarding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_1"
    android:orientation="vertical"
    android:padding="@dimen/_20dp"
    tools:context=".intro.onboard.FirstOnboardingActivity">

    <ImageView
        android:id="@+id/iv_first_onboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/_40dp"
        android:layout_marginTop="@dimen/_40dp"
        android:layout_marginEnd="@dimen/_40dp"
        android:contentDescription="@string/txt_imageview"
        android:src="@drawable/vector_1" />

    <TextView
        android:id="@+id/tv_welcome_to_odak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_first_onboarding"
        android:layout_alignStart="@+id/iv_first_onboarding"
        android:layout_alignEnd="@+id/iv_first_onboarding"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="@string/first_title"
        android:textSize="@dimen/_22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_odak_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_welcome_to_odak"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/first_onboarding"
        android:textAlignment="center"
        android:textSize="@dimen/_18sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_solid_a"
        android:layout_width="@dimen/_18dp"
        android:layout_height="@dimen/_18dp"
        android:layout_above="@+id/tv_skip_1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_140dp"
        android:layout_marginTop="@dimen/_40dp"
        android:layout_marginBottom="@dimen/_100dp"
        android:src="#FFFFFFFF" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_transparent_b"
        android:layout_width="@dimen/_18dp"
        android:layout_height="@dimen/_18dp"
        android:layout_above="@+id/tv_skip_1"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginBottom="@dimen/_100dp"
        android:layout_toEndOf="@+id/iv_solid_a"
        android:src="#B3FFFFFF" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_transparent_c"
        android:layout_width="@dimen/_18dp"
        android:layout_height="@dimen/_18dp"
        android:layout_above="@+id/tv_skip_1"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginBottom="@dimen/_100dp"
        android:layout_toEndOf="@+id/iv_transparent_b"
        android:src="#B3FFFFFF" />

    <TextView
        android:id="@+id/tv_skip_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/skip"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sp" />

    <Button
        android:id="@+id/btn_next_1"
        android:layout_width="@dimen/_108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_246dp"
        android:layout_toEndOf="@+id/tv_skip_1"
        android:background="@drawable/edit_text_background"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textSize="@dimen/_16sp" />

</RelativeLayout>