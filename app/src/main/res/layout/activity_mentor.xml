<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".mentor.MentorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_top_mentor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back_top_mentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/txt_imageview"
                android:scaleType="fitCenter"
                android:src="@drawable/background_rectangle_small" />

            <TextView
                android:id="@+id/tv_ask_mentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/txt_ask_mentor"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sp" />

        </RelativeLayout>

        <SearchView
            android:id="@+id/sv_mentor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_marginHorizontal="@dimen/_30dp"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/search_background"
            android:iconifiedByDefault="false"
            android:queryHint="@string/txt_search_hint" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_claire_mentor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90dp"
            android:layout_marginHorizontal="@dimen/_15dp"
            android:layout_marginTop="@dimen/_20dp"
            app:cardCornerRadius="@dimen/_15dp"
            app:strokeColor="@color/main_color"
            app:strokeWidth="@dimen/_3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_online_one"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_20dp"
                    android:contentDescription="@string/txt_imageview"
                    android:src="@drawable/online_icon" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_claire_mentor"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_toEndOf="@id/iv_online_one"
                    android:src="@drawable/claire_clark" />

                <TextView
                    android:id="@+id/tv_claire_mentor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_toEndOf="@id/iv_claire_mentor"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/txt_claire_clark"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sp" />

                <TextView
                    android:id="@+id/tv_class_claire_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_claire_mentor"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_toEndOf="@id/iv_claire_mentor"
                    android:text="@string/txt_biology"
                    android:textSize="@dimen/_16sp" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_jordan_mentor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90dp"
            android:layout_marginHorizontal="@dimen/_15dp"
