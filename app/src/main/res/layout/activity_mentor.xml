    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MentorActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_top_mentor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back_top_mentor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/background_rectangle_small"
            />
        <TextView
            android:id="@+id/tv_ask_mentor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_ask_mentor"
            android:textSize="@dimen/_22sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/iv_arrow_back_mentor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10dp"
            />
    </RelativeLayout>
    <SearchView
        android:id="@+id/sv_mentor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:background="@drawable/search_background"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginHorizontal="@dimen/_30dp"
        android:iconifiedByDefault="false"
        android:queryHint="@string/txt_search_hint"
        />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_claire_mentor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90dp"
            app:cardCornerRadius="@dimen/_15dp"
            app:strokeWidth="@dimen/_3dp"
            app:strokeColor="@color/main_color"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginHorizontal="@dimen/_15dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_online_one"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/online_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_20dp"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_claire_mentor"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_60dp"
                    android:src="@drawable/claire_clark"
                    android:layout_toEndOf="@id/iv_online_one"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15dp"
                    />
                <TextView
                    android:id="@+id/tv_claire_mentor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_claire_clark"
                    android:textSize="@dimen/_18sp"
                    android:layout_toEndOf="@id/iv_claire_mentor"
                    android:layout_marginTop="@dimen/_20dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginStart="@dimen/_10dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_class_claire_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_biology"
                    android:textSize="@dimen/_16sp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_toEndOf="@id/iv_claire_mentor"
                    android:layout_below="@id/tv_claire_mentor"
                    />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_jordan_mentor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90dp"
