                <TextView
                    android:id="@+id/tv_jordan_mentor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_toEndOf="@id/iv_jordan_mentor"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/txtjordan_wilson"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sp" />

                <TextView
                    android:id="@+id/tv_class_jordan_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_jordan_mentor"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_toEndOf="@id/iv_jordan_mentor"
                    android:text="@string/txt_history"
                    android:textSize="@dimen/_16sp" />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

